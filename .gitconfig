[user]
	name = taiki-nishi
	email = taiki-nishi@cybozu.co.jp
  username = taiki-nishi
[core]
  excludesfile = /Users/nishitaiki/.gitignore_global
  editor = vim -c \"set fenc=utf-8\"
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
[commit]
	template = /Users/nishitaiki/.stCommitMsg
[color]
  ui = true
[alias]
  graph = log --graph --date-order --all --pretty=format:'%h %Cred%d %Cgreen%ad %Cblue%cn %Creset%s' --date=short
  b = branch
      d = diff
      dc = diff --cached
  di = diff
     dic = diff --cached
  dt =  difftool --dir-diff
      info = remote show origin
  l = log --graph --date-order --all --pretty=format:'%h %Cred%d %Cgreen%ad %Cblue%cn %Creset%s' --date=short
      ll = log --stat --abbrev-commit
      ln = log --graph -n 20 --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(green)- %an, %cr%Creset' --name-status
      lp = log --oneline -n 20 -p
      ls = log --stat --abbrev-commit -n 1 # display previous log
      s = status --short --branch
      st = status
  cm = commit -m
  ch = checkout

[merge]
	tool = opendiff
[diff]
	tool = opendiff
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[http]
	sslVerify = false
